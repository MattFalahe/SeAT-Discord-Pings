{
    "name": "mattfalahe/seat-discord-pings",
    "description": "Discord ping and broadcast management for SeAT - Send fleet notifications to Discord channels",
    "type": "seat-plugin",
    "keywords": ["seat", "eve", "eveonline", "discord", "broadcast", "fleet", "pings"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Matt Falahe",
            "email": "mattfalahe@gmail.com"
        }
    ],
    "homepage": "https://github.com/MattFalahe/seat-discord-pings",
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.0|^9.0|^10.0",
        "guzzlehttp/guzzle": "^7.0",
        "eveseat/seat": "^5.0",
        "eveseat/web": "^5.0",
        "eveseat/services": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "^6.0|^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "MattFalahe\\Seat\\DiscordPings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MattFalahe\\Seat\\DiscordPings\\Tests\\": "tests/"
        }
    },
    "extra": {
        "seat": {
            "name": "Discord Pings",
            "icon": "fas fa-bullhorn",
            "namespace": "MattFalahe\\Seat\\DiscordPings"
        },
        "laravel": {
            "providers": [
                "MattFalahe\\Seat\\DiscordPings\\DiscordPingsServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
